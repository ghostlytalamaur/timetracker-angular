{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/store": [
        "src/app/store/index.ts"
      ],
      "@app/core/*": [
        "src/app/core/*"
      ],
      "@app/shared": [
        "src/app/shared/index.ts"
      ],
      "@app/shared/*": [
        "src/app/shared/*"
      ],
      "@app/storage/models": [
        "functions/src/interfaces/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictTemplates": true
  }
}
